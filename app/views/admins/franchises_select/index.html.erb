<div class = "col-12">
  <h2 class="padgett-text">
    <%=I18n.t('franchise_select.title')%>
  </h2>
</div>

<!-- Form that filters through the franchise list -->
<%= form_tag admins_franchises_select_index_path,
    :method => 'get',
    :id => "franchise_search",
    class: 'pt-2 pb-2'  do %>
  <div class = "form-row">  
    <div class = "form-group col-6">
      <div class = "col-sm-12 col-md-12 col-lg-12">
        <%= text_field_tag :search, params[:search],
        class:'form-control input-sm',
        placeholder: I18n.t('franchise_select.search')%>
      </div>
    </div> 
    <div class = "form-group col-6">
      <div class = "col-sm-8 col-md-8 col-lg-8 checkbox checbox-switch switch-primary">
       <label>
          <input type="checkbox" name="show_inactives" value="1" />
          <span></span>
          Show Inactives
        </label>
      </div>
    </div>     

<% end %>
<!-- Franchise list -->
<div class = "col-12">
  <div id="franchises"  >
    <%=render partial: 'franchise_list', locals: {destination: @destination}%>
  </div>
</div>
