          <h4 class="card-title">
            <h3 class="collapsed"  role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseInsurance" aria-expanded="true" aria-controls="collapseInsurance">
              <%=I18n.t('franchise.show.insurance')%>
            </h3>
          </h4>
        </div>
        <div id="collapseInsurance" class="collapse" role="tabpanel" 
          aria-labelledby="headingInsurance">
          <div class="card-body">
            <%= render :partial => 'admins/franchises/show/insurance_details', :locals => {:franchise => @franchise} %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>  
  


