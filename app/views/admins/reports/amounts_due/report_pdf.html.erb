
	<div class = "col-12">
		<h5 class="text-center">
			<%=@report_info[:title]%>
		</h5>
	</div>


<div id = "table-scroll" 
     class = "table-scroll">
     
  <table id = "main-table">
    <thead>
  	  <tr>
  	    <th>
  		    <%=I18n.t('reports.amounts_due.franchise')%>
 		    </th>
		    
		    <th class = "td-right">
			    <%=I18n.t('reports.amounts_due.balance')%>
		    </th>

		  </tr>
	  </thead>
	  <%if @results.size > 0%>
	    <tbody>
	     
	      <%@results.each do |result|%>
	        <tr>
	          <td data-name="Franchise">
		          <%="#{result.franchise_number} #{result.lastname} #{result.firstname}"%>
		        </td>
		  
		  	    <td class = "td-right" data-name="Balance">
		  	    	<% if result.balance > 0.00 %>
		  		      <strong><%=number_to_currency(result.balance, precision: 2)%></strong>
		  		    <% else %>
		  		      <span style="color:red"><strong><%=number_to_currency(result.balance, precision: 2)%></strong></span>
		  		    <% end %>
		  	    </td>
				  </tr>
			  <%end%>
			</tbody>
  	 
  	  
    <%end%> 

  </table>
 </div>  
  <table class="table-scroll">
		<tfoot id="report-footer">
  		<tr>
  			 
          <td>   
           <strong>Total</strong>
          </td>
          <td class = "td-right"> 
            <strong><%=number_to_currency(@report_info[:total_due])%></strong>
          </td>
  		</tr>
  	</tfoot>
  </table>
