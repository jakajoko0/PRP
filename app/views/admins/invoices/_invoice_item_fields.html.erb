<fieldset>
  <div class = "row">
    <div class = "form-row col-12">
      <div class = "form-group form-row col-12">
        <div class = "col-sm-6 col-md-6 col-lg-6">
          <%= f.collection_select :code, 
          TransactionCode.charges_only, :code, :description, {prompt: "Select a Code"}, {class: 'form-control form-control-sm col'}%>    	

        </div>
        <div class = "col-sm-3 col-md-3 col-lg-3">
    	    <%=f.number_field :amount , min: "0", step: 'any', class: 'form-control form-control-sm col text-right', value: (number_with_precision(f.object.amount, :precision => 2) || 0)%>
        </div>

        <div class = "col-sm-2 col-md-2 col-lg-2" align="right">
          <%=f.hidden_field :_destroy %>

	      <%=link_to  "#" ,class: "remove_items" do %>
         <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
        <% end %>
      </div>


      </div>
    </div>
    
  </div>
  </fieldset>





