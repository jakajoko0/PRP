<div class = "card">
  <div class = "card-header login-header">
    <%=I18n.t('accountant.form.education_etc')%>
  </div>
  
  <div class = "card-body card-background-padgett">
    <div class = "form-row col-12">
      <!-- CPA -->
      <div class = "form-group form-row col-6">
        <%=acc.label :cpa,
        class: "col-md-4 col-sm-4 col-lg-4
                col-form-label-sm label-bold" %>
        <div class = "col-sm-7 col-md-7 col-lg-7">
          <%=acc.check_box :cpa,
          class: 'form-control form-control-sm col',
          style: "width:15px;vertical-align:middle"%>
        </div>
      </div>

      <!-- MBA -->
      <div class = "form-group form-row col-6">
        <%=acc.label :mba,
        class: "col-md-4 col-sm-4 col-lg-4 
                col-form-label-sm label-bold" %>
        <div class = "col-sm-7 col-md-7 col-lg-7">
          <%=acc.check_box :mba,
          class: 'form-control form-control-sm col',
          style: "width:15px;vertical-align:middle"%>
        </div>
      </div>
    </div>
    <div class = "form-row col-12">
      <!-- ACCOUNTING DEGREE -->
      <div class = "form-group form-row col-6">
        <%=acc.label :degree,
        class: "col-md-4 col-sm-4 col-lg-4 
                col-form-label-sm label-bold" %>
        <div class = "col-sm-7 col-md-7 col-lg-7">
          <%=acc.check_box :degree,
          class: 'form-control form-control-sm col',
          style: "width:15px;vertical-align:middle"%>
        </div>
      </div>

      <!-- PTIN -->
      <div class = "form-group form-row col-6">
        <%=acc.label :ptin, "PTIN",
        class: "col-md-4 col-sm-4 col-lg-4 
                col-form-label-sm label-bold" %>
        <div class = "col-sm-5 col-md-4 col-lg-3">
          <div class = "input-group input-group-sm">
            <div class="input-group-prepend">
              <span class="input-group-text">P</span>
            </div>
            <%=acc.text_field :ptin,
            class: 'form-control form-control-sm col',
            size: 10, maxlength: 8%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>  