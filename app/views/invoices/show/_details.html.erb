<form>
	<div class = "form-row col-12">
		<div class = "col-sm-8 col-md-8 col-lg-8 col-form-label col-form-label-sm label-bold">
      <%=I18n.t('invoice.form.item_title')%>
    </div>
    <div class = "col-sm-3 col-md-3 col-lg-3 col-form-label col-form-label-sm label-bold text-right">
      <%=I18n.t('invoice.form.price_title')%>
    </div>
    
	</div>
	<%invoice.invoice_items.each do |item|%>
	  <div class = "form-row col-12">
	  	
        <div class = "col-sm-8 col-md-8 col-lg-8 form-control-plaintext">
        	<%=TransactionCode.description_from_code(item.code)%>
        </div>
        <div class = "col-sm-3 col-md-3 col-lg-3 form-control-plaintext text-right">
    	    <%=number_with_precision(item.amount,precision: 2)%>
        </div>
      
    </div>

	<%end%>
</form>