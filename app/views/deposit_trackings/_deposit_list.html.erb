<div id = "table-scroll"
     class = "table-scroll">
  <table id = "deposits-list" class = "table-striped">
    <thead id = "list">
      <tr>
        <!-- Date -->
        <th scope = "col" class = "td-left">
            <%=I18n.t('deposit_tracking.index.date')%>
        </th>
        <!-- Accounting -->
        <th scope = "col" class = "td-right">
          <%=I18n.t('deposit_tracking.index.accounting')%>
        </th>
        
        <!-- Backwork -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.backwork')%>
        </th>

        <!-- Consulting -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.consulting')%>
        </th>

        <!-- Payroll -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.payroll')%>
        </th>        

        <!-- Setup -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.setup')%>
        </th>        

        <!-- Tax Prep -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.tax_prep')%>
        </th>        
        <!-- Other1 -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.other1')%>
        </th>        
        <!-- Other2 -->
        <th scope = "col" class = "td-right">
            <%=I18n.t('deposit_tracking.index.other2')%>
        </th>        
                    
        <th></th>
        
        <th></th>


        <th></th>
      </tr>
    </thead>

    <% if deposit_trackings.size > 0 %>
      <tbody>    
        <%deposit_trackings.each do |deposit|%>
          <tr>
            <!-- Date -->
            <td data-name = "Date"
                scope = "col"
                class = "td-left">
                <%=I18n.l(deposit.deposit_date, format: :notime)%>
            </td>

            
            <!-- Accounting -->
            <td data-name = "Accounting" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.accounting, precision: 2)%>
            </td>

            <!-- Backwork -->
            <td data-name = "Backwork" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.backwork, precision: 2)%>
            </td>

            <!-- Consulting -->
            <td data-name = "Consulting" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.consulting, precision: 2)%>
            </td>

            <!-- Payroll -->
            <td data-name = "Payroll" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.payroll, precision: 2)%>
            </td>

            <!-- Setup -->
            <td data-name = "Setup" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.setup, precision: 2)%>
            </td>

            <!-- Tax Prep -->
            <td data-name = "Tax Prep" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.tax_preparation, precision: 2)%>
            </td>

            <!-- Other1 -->
            <td data-name = "Other1" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.other1, precision: 2)%>
            </td>

            <!-- Other1 -->
            <td data-name = "Other2" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(deposit.other2, precision: 2)%>
            </td>
            
            <!-- Edit Link if User can Edit -->
            <%if can? :edit, deposit %>
              <td data-name = ""
                  class = "td-center">
                  <%=link_with_icon(edit_deposit_tracking_path(deposit),
                  "edit",
                  I18n.t('deposit_tracking.index.edit_link'),
                  "",
                  false)%>
              </td>
            <%else%>   
              <td></td>
            <%end%>
            
            <!-- Delete Link if User can Delete -->
            <%if can? :delete, deposit%>
              <td data-name = ""
                  class = "td-center">
                  <%=link_with_icon(deposit_tracking_path(id: deposit),
                  "delete",
                  I18n.t('deposit_tracking.index.delete_link'),
                  I18n.t('deposit_tracking.index.delete_confirm'),false)%>
              </td>
            <%else%>
              <td></td>
            <%end%>

             
          </tr>
        <%end%>
      </tbody>
    <%end%>
    <%if !@sums.nil?%>
      <tfoot>
        <%@sums.each do |sum|%>
          <tr>
            
            <td data-name = "Date"
                scope = "col"
                class = "td-left">
                MONTHLY TOTALS
            </td>

            
            <!-- Accounting -->
            <td data-name = "Accounting" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.accounting, precision: 2)%>
            </td>

            <!-- Backwork -->
            <td data-name = "Backwork" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.backwork, precision: 2)%>
            </td>

            <!-- Consulting -->
            <td data-name = "Consulting" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.consulting, precision: 2)%>
            </td>

            <!-- Payroll -->
            <td data-name = "Payroll" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.payroll, precision: 2)%>
            </td>

            <!-- Setup -->
            <td data-name = "Setup" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.setup, precision: 2)%>
            </td>

            <!-- Tax Prep -->
            <td data-name = "Tax Prep" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.tax_prep, precision: 2)%>
            </td>

            <!-- Other1 -->
            <td data-name = "Other1" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.other1, precision: 2)%>
            </td>

            <!-- Other1 -->
            <td data-name = "Other2" 
                scope = "col"
                class = "td-right">
                <%=number_to_currency(sum.other2, precision: 2)%>
            </td>
            <td></td>
            <td></td>
          </tr>
        <%end%>
      </tfoot>
    <%end%>
  </table>
</div>      